@model RestaurantDomain.Models.Cook

@{
    ViewData["Title"] = "Деталі кухаря";
}

<h1>Деталі</h1>

<div>
    <h4>Кухар</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant)
        </dt>
        <dd class="col-sm-10">
            @(Model.Restaurant != null ? Html.DisplayFor(model => Model.Restaurant.Name) : "Немає ресторану")
        </dd>

    </dl>
</div>
<div>
    @if (!User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редагувати</a>
    }
    <a asp-action="Index">Повернутися до списку</a>
</div>