@model RestaurantDomain.Models.Restaurant

@{
    ViewData["Title"] = "Додати відгук";
}

<h1>Додати відгук</h1>

<h4>Ресторан: @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Відгук</label>
                <textarea name="review" class="form-control" placeholder="Введіть ваш відгук"></textarea>
                <span asp-validation-for="Reviews" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати відгук" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}